<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1" >

    <ImageView
        android:id="@+id/iv_bg_agreement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-14dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg"
        />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/login_btn_purple"
        android:onClick="OnClick"/>

    <TextView
        android:id="@+id/tv_agreement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userAgreementTitle"
        android:textSize="24dp"/>

    <ScrollView
        android:id="@+id/sv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userAgreement"
            android:textSize="22dp"/>

    </ScrollView>

</RelativeLayout>